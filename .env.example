# ===========================================
# DevOci.in Environment Variables Template
# Copy this file to .env and fill in values
# ===========================================

# Server Configuration
NODE_ENV=
PORT=4000
# WEBSOCKET_PORT=5000 # Optional if using separate port

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# MongoDB Database
# Local: mongodb://localhost:27017/devoci
# Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/devoci
MONGODB_URI=mongodb://localhost:27017/devoci

# Redis (for Caching & Job Queues)
# Local: redis://localhost:6379
# Cloud: redis://:password@endpoint:port
REDIS_URL=redis://localhost:6379

# JWT Authentication
# Generate strong secrets in production!
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# OAuth Providers (Optional - Required for Social Login)
# Google Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# GitHub Apps: https://github.com/settings/apps
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:4000/auth/github/callback

# AI Interface (Gemini) - Required for Content Scoring
# Get key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Email Service (Resend or Gmail SMTP)
# Resend: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=DevOci <noreply@yourdomain.com>

# Gmail SMTP (Fallback if Resend is missing)
# Use App Password: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Stripe Billing (Optional)
# Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Push Notifications (Web Push)
# Generate keys: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:support@yourdomain.com

# Error Tracking (Sentry) - Optional
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Performance Tuning
CLUSTER_ENABLED=true
WORKER_COUNT=0 # 0 = Auto-detect CPU cores
MONGO_POOL_MIN=10
MONGO_POOL_MAX=50
